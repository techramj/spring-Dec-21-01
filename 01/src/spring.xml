<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
  
    <bean id="car1" class="com.easylearning.Car">
    	<constructor-arg value="BMW"></constructor-arg>
    </bean>
    
    <bean id="c2" class="com.easylearning.Car">
    	<property name="name" value="Tata Nano"></property>
    </bean>
    
    <bean id="bike" class="com.easylearning.Bike">
    	<constructor-arg value="Bullet" />
    </bean>
    
    <bean id="emp" class="com.easylearning.Employee">
    	<constructor-arg name="id" value="1"/>
    	<constructor-arg name="name" value="Jack"/>
    	<constructor-arg name="salary" value="1000"/>
    	<property name="vehicle" ref="bike"></property>
    </bean>
  
</beans>
